<Window x:Class="MemoryTiles.ConfigureBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryTiles"
        mc:Ignorable="d"
        Title="Configure Board Window" Height="400" Width="500">
    <Grid>
        <Label Content="Set the size of your board" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Label Content="Rows" HorizontalAlignment="Left" Margin="103,150,0,0" VerticalAlignment="Top" Height="42" Width="91" FontSize="20"/>
        <Label Content="Columns" HorizontalAlignment="Left" Margin="103,213,0,0" VerticalAlignment="Top" Height="42" Width="91" FontSize="20"/>
        <TextBox x:Name="rows" HorizontalAlignment="Left" Margin="250,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Height="42" FontSize="20"/>
        <TextBox x:Name="columns" HorizontalAlignment="Left" Margin="250,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Height="42" FontSize="20"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="202,319,0,0" VerticalAlignment="Top" Height="39" Width="83" Click="OK_Click"/>

    </Grid>
</Window>
